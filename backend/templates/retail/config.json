    },
    {
      "id": "map",
      "name": "Lokasi",
      "description": "Peta lokasi bisnis",
      "optional": true
    }
  ],
  "form_fields": [
    {
      "name": "name",
      "label": "Nama Lengkap",
      "type": "text",
      "required": true,
      "placeholder": "Masukkan nama lengkap"
    },
    {
      "name": "email",
      "label": "Email",
      "type": "email",
      "required": true,
      "placeholder": "contoh@email.com"
    },
    {
      "name": "phone",
      "label": "Nomor Telepon",
      "type": "tel",
      "required": true,
      "placeholder": "08123456789"
    },
    {
      "name": "message",
      "label": "Pesan",
      "type": "textarea",
      "required": true,
      "placeholder": "Tulis pesan Anda di sini..."
    }
  ],
  "analytics_events": [
    "page_view",
    "form_submit",
    "phone_click",
    "whatsapp_click",
    "product_view",
    "gallery_view",
    "ecommerce_click"
  ],
  "seo": {
    "title_template": "{{ business.name }} - {{ business.tagline | default('Toko Terpercaya') }}",
    "description_template": "{{ business.description }}. Temukan produk berkualitas dengan harga terbaik.",
    "keywords": ["toko", "retail", "produk", "belanja", "online", "offline"]
  },
  "mobile_optimization": {
    "responsive": true,
    "touch_friendly": true,
    "fast_loading": true,
    "pwa_ready": true
  },
  "integrations": {
    "google_maps": true,
    "whatsapp": true,
    "ecommerce_platforms": true,
    "social_media": true,
    "analytics": true
  }
