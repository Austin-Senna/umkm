{% extends "base/layout.njk" %}

{% block content %}
<!-- Hero Section -->
<section id="beranda" class="hero">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="hero-content">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">{{ business.name }}</h1>
            <p class="text-xl md:text-2xl mb-8">{{ business.tagline | default("Temukan produk berkualitas dengan harga terbaik") }}</p>
            {% if business.phone or business.whatsapp %}
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                {% if business.phone %}
                <a href="tel:{{ business.phone }}" class="btn btn-primary">
                    üìû Hubungi Kami
                </a>
                {% endif %}
                {% if business.whatsapp %}
                <a href="https://wa.me/{{ business.whatsapp }}" target="_blank" class="btn btn-success">
                    üí¨ WhatsApp
                </a>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
</section>

<!-- About Section -->
<section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
            <div class="fade-in">
                <h2 class="text-3xl font-bold mb-4">Tentang {{ business.name }}</h2>
                <p class="text-lg text-gray-700 mb-6">{{ business.description }}</p>
                {% if business.address %}
                <div class="flex items-center mb-4">
                    <span class="text-2xl mr-3">üìç</span>
                    <div>
                        <p class="font-semibold">Lokasi</p>
                        <p class="text-gray-600">{{ business.address }}</p>
                    </div>
                </div>
                {% endif %}
                {% if business.opening_hours %}
                <div class="flex items-center">
                    <span class="text-2xl mr-3">üïí</span>
                    <div>
                        <p class="font-semibold">Jam Operasional</p>
                        <p class="text-gray-600">{{ business.opening_hours }}</p>
                    </div>
                </div>
                {% endif %}
            </div>
            {% if business.featured_image %}
            <div class="fade-in">
                <img src="{{ business.featured_image }}" alt="{{ business.name }}" class="rounded-lg shadow-lg w-full h-80 object-cover">
            </div>
            {% endif %}
        </div>
    </div>
</section>

<!-- Products Section -->
{% if business.products %}
<section id="produk" class="section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Produk Unggulan</h2>
        <p class="section-subtitle">Temukan produk berkualitas dengan harga terbaik</p>
        
        <div class="product-grid">
            {% for product in business.products %}
            <div class="card slide-up">
                {% if product.image %}
                <img src="{{ product.image }}" alt="{{ product.name }}" class="card-image">
                {% endif %}
                <div class="card-body">
                    <h3 class="text-xl font-semibold mb-2">{{ product.name }}</h3>
                    {% if product.description %}
                    <p class="text-gray-600 mb-4">{{ product.description }}</p>
                    {% endif %}
                    <div class="flex justify-between items-center">
                        <span class="text-2xl font-bold text-green-600">{{ product.price | formatCurrency }}</span>
                        {% if product.available == false %}
                        <span class="text-red-500 text-sm">Stok Habis</span>
                        {% else %}
                        <span class="text-green-500 text-sm">Tersedia</span>
                        {% endif %}
                    </div>
                    {% if product.ecommerce_links %}
                    <div class="mt-4 flex flex-wrap gap-2">
                        {% for link in product.ecommerce_links %}
                        <a href="{{ link.url }}" target="_blank" class="btn btn-secondary text-sm">
                            {{ link.platform }}
                        </a>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- Services Section -->
{% if business.services %}
<section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Layanan Kami</h2>
        <p class="section-subtitle">Berbagai layanan yang kami tawarkan untuk memenuhi kebutuhan Anda</p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for service in business.services %}
            <div class="card slide-up">
                <div class="card-body text-center">
                    {% if service.icon %}
                    <div class="text-4xl mb-4">{{ service.icon }}</div>
                    {% endif %}
                    <h3 class="text-xl font-semibold mb-3">{{ service.name }}</h3>
                    <p class="text-gray-600 mb-4">{{ service.description }}</p>
                    {% if service.price %}
                    <p class="text-lg font-bold text-green-600 mb-4">{{ service.price | formatCurrency }}</p>
                    {% endif %}
                    {% if service.contact_info %}
                    <a href="tel:{{ service.contact_info.phone }}" class="btn btn-primary">
                        Hubungi Kami
                    </a>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- Gallery Section -->
{% if business.gallery %}
<section id="galeri" class="section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Galeri</h2>
        <p class="section-subtitle">Lihat suasana toko dan produk kami</p>
        
        <div class="gallery-grid">
            {% for image in business.gallery %}
            <div class="card slide-up">
                <img src="{{ image.url }}" alt="{{ image.caption | default('Galeri ' + business.name) }}" 
                     class="card-image gallery-image cursor-pointer" 
                     data-caption="{{ image.caption }}">
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- E-commerce Links -->
{% if business.ecommerce_links %}
<section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Belanja Online</h2>
        <p class="section-subtitle">Kunjungi toko online kami di berbagai platform</p>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {% for platform in business.ecommerce_links %}
            <a href="{{ platform.url }}" target="_blank" class="card slide-up hover:shadow-lg transition-shadow">
                <div class="card-body text-center">
                    <div class="text-3xl mb-3">{{ platform.icon | default("üõí") }}</div>
                    <h3 class="font-semibold">{{ platform.name }}</h3>
                    <p class="text-sm text-gray-600 mt-2">{{ platform.description | default("Kunjungi toko kami") }}</p>
                </div>
            </a>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- Contact Section -->
<section id="kontak" class="section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Hubungi Kami</h2>
        <p class="section-subtitle">Kami siap melayani pertanyaan dan pesanan Anda</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Contact Information -->
            <div class="fade-in">
                <h3 class="text-2xl font-semibold mb-6">Informasi Kontak</h3>
                <div class="space-y-4">
                    {% if business.phone %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">üìû</span>
                        <div>
                            <p class="font-semibold">Telepon</p>
                            <a href="tel:{{ business.phone }}" class="text-blue-600 hover:text-blue-800">
                                {{ business.phone }}
                            </a>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.whatsapp %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">üí¨</span>
                        <div>
                            <p class="font-semibold">WhatsApp</p>
                            <a href="https://wa.me/{{ business.whatsapp }}" target="_blank" class="text-green-600 hover:text-green-800">
                                {{ business.whatsapp }}
                            </a>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.address %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">üìç</span>
                        <div>
                            <p class="font-semibold">Alamat</p>
                            <p class="text-gray-700">{{ business.address }}</p>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.opening_hours %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">üïí</span>
                        <div>
                            <p class="font-semibold">Jam Operasional</p>
                            <p class="text-gray-700">{{ business.opening_hours }}</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
                
                {% if business.social_links %}
                <div class="mt-8">
                    <h4 class="text-lg font-semibold mb-4">Ikuti Kami</h4>
                    <div class="flex space-x-4">
                        {% if business.social_links.instagram %}
                        <a href="{{ business.social_links.instagram }}" target="_blank" class="text-2xl hover:text-pink-600">
                            üì∑
                        </a>
                        {% endif %}
                        {% if business.social_links.facebook %}
                        <a href="{{ business.social_links.facebook }}" target="_blank" class="text-2xl hover:text-blue-600">
                            üìò
                        </a>
                        {% endif %}
                        {% if business.social_links.tiktok %}
                        <a href="{{ business.social_links.tiktok }}" target="_blank" class="text-2xl hover:text-black">
                            üéµ
                        </a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            </div>
            
            <!-- Contact Form -->
            <div class="fade-in">
                <h3 class="text-2xl font-semibold mb-6">Kirim Pesan</h3>
                <form id="contact-form" class="contact-form">
                    <div class="form-group">
                        <label for="name" class="form-label">Nama Lengkap</label>
                        <input type="text" id="name" name="name" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="phone" class="form-label">Nomor Telepon</label>
                        <input type="tel" id="phone" name="phone" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="message" class="form-label">Pesan</label>
                        <textarea id="message" name="message" class="form-textarea" placeholder="Tulis pesan Anda di sini..." required></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-full">
                        Kirim Pesan
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
{% if business.address %}
<section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Lokasi Kami</h2>
        <div class="fade-in">
            <div class="bg-white rounded-lg shadow-lg p-4">
                <div class="aspect-w-16 aspect-h-9">
                    <iframe 
                        src="https://www.google.com/maps/embed/v1/place?key=YOUR_GOOGLE_MAPS_API_KEY&q={{ business.address | urlencode }}" 
                        width="100%" 
                        height="400" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}

<!-- Business ID for Analytics -->
<script>
    window.businessId = '{{ business.id }}';
</script>
{% endblock %} 