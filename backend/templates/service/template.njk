{% extends "base/layout.njk" %}

{% block content %}
<!-- Hero Section -->
<section id="beranda" class="hero">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="hero-content">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">{{ business.name }}</h1>
            <p class="text-xl md:text-2xl mb-8">{{ business.tagline | default("Layanan profesional untuk memenuhi kebutuhan Anda") }}</p>
            {% if business.phone or business.whatsapp %}
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                {% if business.phone %}
                <a href="tel:{{ business.phone }}" class="btn btn-primary">
                    üìû Hubungi Kami
                </a>
                {% endif %}
                {% if business.whatsapp %}
                <a href="https://wa.me/{{ business.whatsapp }}" target="_blank" class="btn btn-success">
                    üí¨ WhatsApp
                </a>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
</section>

<!-- About Section -->
<section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
            <div class="fade-in">
                <h2 class="text-3xl font-bold mb-4">Tentang {{ business.name }}</h2>
                <p class="text-lg text-gray-700 mb-6">{{ business.description }}</p>
                {% if business.address %}
                <div class="flex items-center mb-4">
                    <span class="text-2xl mr-3">üìç</span>
                    <div>
                        <p class="font-semibold">Lokasi</p>
                        <p class="text-gray-600">{{ business.address }}</p>
                    </div>
                </div>
                {% endif %}
                {% if business.opening_hours %}
                <div class="flex items-center">
                    <span class="text-2xl mr-3">üïí</span>
                    <div>
                        <p class="font-semibold">Jam Operasional</p>
                        <p class="text-gray-600">{{ business.opening_hours }}</p>
                    </div>
                </div>
                {% endif %}
            </div>
            {% if business.featured_image %}
            <div class="fade-in">
                <img src="{{ business.featured_image }}" alt="{{ business.name }}" class="rounded-lg shadow-lg w-full h-80 object-cover">
            </div>
            {% endif %}
        </div>
    </div>
</section>

<!-- Services Section -->
{% if business.services %}
<section id="layanan" class="section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Layanan Kami</h2>
        <p class="section-subtitle">Berbagai layanan profesional yang kami tawarkan</p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for service in business.services %}
            <div class="card slide-up">
                <div class="card-body text-center">
                    {% if service.icon %}
                    <div class="text-4xl mb-4">{{ service.icon }}</div>
                    {% endif %}
                    <h3 class="text-xl font-semibold mb-3">{{ service.name }}</h3>
                    <p class="text-gray-600 mb-4">{{ service.description }}</p>
                    {% if service.price %}
                    <p class="text-lg font-bold text-green-600 mb-4">{{ service.price | formatCurrency }}</p>
                    {% endif %}
                    {% if service.features %}
                    <ul class="text-sm text-gray-600 mb-4 text-left">
                        {% for feature in service.features %}
                        <li class="mb-1">‚Ä¢ {{ feature }}</li>
                        {% endfor %}
                    </ul>
                    {% endif %}
                    {% if service.contact_info %}
                    <a href="tel:{{ service.contact_info.phone }}" class="btn btn-primary">
                        Konsultasi Sekarang
                    </a>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- Why Choose Us Section -->
{% if business.why_choose_us %}
<section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Mengapa Memilih Kami</h2>
        <p class="section-subtitle">Keunggulan yang membuat kami berbeda</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {% for reason in business.why_choose_us %}
            <div class="text-center slide-up">
                <div class="text-3xl mb-4">{{ reason.icon }}</div>
                <h3 class="text-lg font-semibold mb-2">{{ reason.title }}</h3>
                <p class="text-gray-600">{{ reason.description }}</p>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- Testimonials Section -->
{% if business.testimonials %}
<section class="section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Testimoni Klien</h2>
        <p class="section-subtitle">Apa kata klien kami tentang layanan kami</p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {% for testimonial in business.testimonials %}
            <div class="card slide-up">
                <div class="card-body">
                    <div class="flex items-center mb-4">
                        {% if testimonial.avatar %}
                        <img src="{{ testimonial.avatar }}" alt="{{ testimonial.name }}" class="w-12 h-12 rounded-full mr-4">
                        {% endif %}
                        <div>
                            <h4 class="font-semibold">{{ testimonial.name }}</h4>
                            <p class="text-sm text-gray-600">{{ testimonial.position | default("Klien") }}</p>
                        </div>
                    </div>
                    <p class="text-gray-700 italic">"{{ testimonial.message }}"</p>
                    {% if testimonial.rating %}
                    <div class="flex mt-3">
                        {% for i in range(testimonial.rating) %}
                        <span class="text-yellow-400">‚≠ê</span>
                        {% endfor %}
                    </div>
                    {% endif %}
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- Gallery Section -->
{% if business.gallery %}
<section id="galeri" class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Galeri</h2>
        <p class="section-subtitle">Lihat hasil kerja dan suasana kantor kami</p>
        
        <div class="gallery-grid">
            {% for image in business.gallery %}
            <div class="card slide-up">
                <img src="{{ image.url }}" alt="{{ image.caption | default('Galeri ' + business.name) }}" 
                     class="card-image gallery-image cursor-pointer" 
                     data-caption="{{ image.caption }}">
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- Contact Section -->
<section id="kontak" class="section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Hubungi Kami</h2>
        <p class="section-subtitle">Kami siap membantu dan menjawab pertanyaan Anda</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Contact Information -->
            <div class="fade-in">
                <h3 class="text-2xl font-semibold mb-6">Informasi Kontak</h3>
                <div class="space-y-4">
                    {% if business.phone %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">üìû</span>
                        <div>
                            <p class="font-semibold">Telepon</p>
                            <a href="tel:{{ business.phone }}" class="text-blue-600 hover:text-blue-800">
                                {{ business.phone }}
                            </a>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.whatsapp %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">üí¨</span>
                        <div>
                            <p class="font-semibold">WhatsApp</p>
                            <a href="https://wa.me/{{ business.whatsapp }}" target="_blank" class="text-green-600 hover:text-green-800">
                                {{ business.whatsapp }}
                            </a>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.email %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">‚úâÔ∏è</span>
                        <div>
                            <p class="font-semibold">Email</p>
                            <a href="mailto:{{ business.email }}" class="text-blue-600 hover:text-blue-800">
                                {{ business.email }}
                            </a>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.address %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">üìç</span>
                        <div>
                            <p class="font-semibold">Alamat</p>
                            <p class="text-gray-700">{{ business.address }}</p>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.opening_hours %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">üïí</span>
                        <div>
                            <p class="font-semibold">Jam Operasional</p>
                            <p class="text-gray-700">{{ business.opening_hours }}</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
                
                {% if business.social_links %}
                <div class="mt-8">
                    <h4 class="text-lg font-semibold mb-4">Ikuti Kami</h4>
                    <div class="flex space-x-4">
                        {% if business.social_links.instagram %}
                        <a href="{{ business.social_links.instagram }}" target="_blank" class="text-2xl hover:text-pink-600">
                            üì∑
                        </a>
                        {% endif %}
                        {% if business.social_links.facebook %}
                        <a href="{{ business.social_links.facebook }}" target="_blank" class="text-2xl hover:text-blue-600">
                            üìò
                        </a>
                        {% endif %}
                        {% if business.social_links.linkedin %}
                        <a href="{{ business.social_links.linkedin }}" target="_blank" class="text-2xl hover:text-blue-700">
                            üíº
                        </a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            </div>
            
            <!-- Contact Form -->
            <div class="fade-in">
                <h3 class="text-2xl font-semibold mb-6">Kirim Pesan</h3>
                <form id="contact-form" class="contact-form">
                    <div class="form-group">
                        <label for="name" class="form-label">Nama Lengkap</label>
                        <input type="text" id="name" name="name" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="phone" class="form-label">Nomor Telepon</label>
                        <input type="tel" id="phone" name="phone" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="service" class="form-label">Layanan yang Diminati</label>
                        <select id="service" name="service" class="form-input">
                            <option value="">Pilih layanan</option>
                            {% if business.services %}
                            {% for service in business.services %}
                            <option value="{{ service.name }}">{{ service.name }}</option>
                            {% endfor %}
                            {% endif %}
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="message" class="form-label">Pesan</label>
                        <textarea id="message" name="message" class="form-textarea" placeholder="Tulis pesan Anda di sini..." required></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-full">
                        Kirim Pesan
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
{% if business.address %}
<section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Lokasi Kami</h2>
        <div class="fade-in">
            <div class="bg-white rounded-lg shadow-lg p-4">
                <div class="aspect-w-16 aspect-h-9">
                    <iframe 
                        src="https://www.google.com/maps/embed/v1/place?key=YOUR_GOOGLE_MAPS_API_KEY&q={{ business.address | urlencode }}" 
                        width="100%" 
                        height="400" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}

<!-- Business ID for Analytics -->
<script>
    window.businessId = '{{ business.id }}';
</script>
{% endblock %} 