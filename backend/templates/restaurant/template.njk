{% extends "base/layout.njk" %}

{% block content %}
<!-- Hero Section -->
<section id="beranda" class="hero">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="hero-content">
            <h1 class="text-4xl md:text-6xl font-bold mb-6">{{ business.name }}</h1>
            <p class="text-xl md:text-2xl mb-8">{{ business.tagline | default("Nikmati hidangan lezat dengan cita rasa autentik") }}</p>
            {% if business.phone or business.whatsapp %}
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                {% if business.phone %}
                <a href="tel:{{ business.phone }}" class="btn btn-primary">
                    📞 Hubungi Kami
                </a>
                {% endif %}
                {% if business.whatsapp %}
                <a href="https://wa.me/{{ business.whatsapp }}" target="_blank" class="btn btn-success">
                    💬 WhatsApp
                </a>
                {% endif %}
            </div>
            {% endif %}
        </div>
    </div>
</section>

<!-- About Section -->
<section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
            <div class="fade-in">
                <h2 class="text-3xl font-bold mb-4">Tentang {{ business.name }}</h2>
                <p class="text-lg text-gray-700 mb-6">{{ business.description }}</p>
                {% if business.address %}
                <div class="flex items-center mb-4">
                    <span class="text-2xl mr-3">📍</span>
                    <div>
                        <p class="font-semibold">Lokasi</p>
                        <p class="text-gray-600">{{ business.address }}</p>
                    </div>
                </div>
                {% endif %}
                {% if business.opening_hours %}
                <div class="flex items-center">
                    <span class="text-2xl mr-3">🕒</span>
                    <div>
                        <p class="font-semibold">Jam Operasional</p>
                        <p class="text-gray-600">{{ business.opening_hours }}</p>
                    </div>
                </div>
                {% endif %}
            </div>
            {% if business.featured_image %}
            <div class="fade-in">
                <img src="{{ business.featured_image }}" alt="{{ business.name }}" class="rounded-lg shadow-lg w-full h-80 object-cover">
            </div>
            {% endif %}
        </div>
    </div>
</section>

<!-- Menu Section -->
{% if business.menu %}
<section id="produk" class="section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Menu Favorit</h2>
        <p class="section-subtitle">Nikmati hidangan terbaik kami dengan cita rasa yang memukau</p>
        
        <div class="product-grid">
            {% for category in business.menu %}
            <div class="card slide-up">
                <div class="card-body">
                    <h3 class="text-xl font-semibold mb-4">{{ category.name }}</h3>
                    <div class="space-y-4">
                        {% for item in category.items %}
                        <div class="flex justify-between items-start">
                            <div class="flex-1">
                                <h4 class="font-medium">{{ item.name }}</h4>
                                {% if item.description %}
                                <p class="text-sm text-gray-600 mt-1">{{ item.description }}</p>
                                {% endif %}
                            </div>
                            <div class="text-right ml-4">
                                <p class="font-semibold text-green-600">{{ item.price | formatCurrency }}</p>
                                {% if item.available == false %}
                                <p class="text-xs text-red-500">Habis</p>
                                {% endif %}
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        
        {% if business.delivery_apps %}
        <div class="mt-12 text-center">
            <h3 class="text-2xl font-semibold mb-6">Pesan Online</h3>
            <div class="flex flex-wrap justify-center gap-4">
                {% for app in business.delivery_apps %}
                <a href="{{ app.link }}" target="_blank" class="btn btn-secondary">
                    {{ app.name }}
                </a>
                {% endfor %}
            </div>
        </div>
        {% endif %}
    </div>
</section>
{% endif %}

<!-- Gallery Section -->
{% if business.gallery %}
<section id="galeri" class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Galeri</h2>
        <p class="section-subtitle">Lihat suasana dan hidangan kami</p>
        
        <div class="gallery-grid">
            {% for image in business.gallery %}
            <div class="card slide-up">
                <img src="{{ image.url }}" alt="{{ image.caption | default('Galeri ' + business.name) }}" 
                     class="card-image gallery-image cursor-pointer" 
                     data-caption="{{ image.caption }}">
            </div>
            {% endfor %}
        </div>
    </div>
</section>
{% endif %}

<!-- Contact Section -->
<section id="kontak" class="section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Hubungi Kami</h2>
        <p class="section-subtitle">Kami siap melayani pesanan dan pertanyaan Anda</p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Contact Information -->
            <div class="fade-in">
                <h3 class="text-2xl font-semibold mb-6">Informasi Kontak</h3>
                <div class="space-y-4">
                    {% if business.phone %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">📞</span>
                        <div>
                            <p class="font-semibold">Telepon</p>
                            <a href="tel:{{ business.phone }}" class="text-blue-600 hover:text-blue-800">
                                {{ business.phone }}
                            </a>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.whatsapp %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">💬</span>
                        <div>
                            <p class="font-semibold">WhatsApp</p>
                            <a href="https://wa.me/{{ business.whatsapp }}" target="_blank" class="text-green-600 hover:text-green-800">
                                {{ business.whatsapp }}
                            </a>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.address %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">📍</span>
                        <div>
                            <p class="font-semibold">Alamat</p>
                            <p class="text-gray-700">{{ business.address }}</p>
                        </div>
                    </div>
                    {% endif %}
                    
                    {% if business.opening_hours %}
                    <div class="flex items-center">
                        <span class="text-2xl mr-4">🕒</span>
                        <div>
                            <p class="font-semibold">Jam Operasional</p>
                            <p class="text-gray-700">{{ business.opening_hours }}</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
                
                {% if business.social_links %}
                <div class="mt-8">
                    <h4 class="text-lg font-semibold mb-4">Ikuti Kami</h4>
                    <div class="flex space-x-4">
                        {% if business.social_links.instagram %}
                        <a href="{{ business.social_links.instagram }}" target="_blank" class="text-2xl hover:text-pink-600">
                            📷
                        </a>
                        {% endif %}
                        {% if business.social_links.facebook %}
                        <a href="{{ business.social_links.facebook }}" target="_blank" class="text-2xl hover:text-blue-600">
                            📘
                        </a>
                        {% endif %}
                        {% if business.social_links.tiktok %}
                        <a href="{{ business.social_links.tiktok }}" target="_blank" class="text-2xl hover:text-black">
                            🎵
                        </a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
            </div>
            
            <!-- Contact Form -->
            <div class="fade-in">
                <h3 class="text-2xl font-semibold mb-6">Kirim Pesan</h3>
                <form id="contact-form" class="contact-form">
                    <div class="form-group">
                        <label for="name" class="form-label">Nama Lengkap</label>
                        <input type="text" id="name" name="name" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="phone" class="form-label">Nomor Telepon</label>
                        <input type="tel" id="phone" name="phone" class="form-input" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="message" class="form-label">Pesan</label>
                        <textarea id="message" name="message" class="form-textarea" placeholder="Tulis pesan Anda di sini..." required></textarea>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-full">
                        Kirim Pesan
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>

<!-- Map Section -->
{% if business.address %}
<section class="section bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="section-title">Lokasi Kami</h2>
        <div class="fade-in">
            <div class="bg-white rounded-lg shadow-lg p-4">
                <div class="aspect-w-16 aspect-h-9">
                    <iframe 
                        src="https://www.google.com/maps/embed/v1/place?key=YOUR_GOOGLE_MAPS_API_KEY&q={{ business.address | urlencode }}" 
                        width="100%" 
                        height="400" 
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</section>
{% endif %}

<!-- Business ID for Analytics -->
<script>
    window.businessId = '{{ business.id }}';
</script>
{% endblock %} 